    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/selector_list_item_category"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <View
        android:id="@+id/list_item_category_divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/separator" />

    <com.andexert.library.RippleView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ripple:rv_rippleDuration="100"
        ripple:rv_centered="false"
        ripple:rv_color="?colorPrimary">

    <TextView
        android:id="@+id/list_item_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:clickable="false"
        android:drawableLeft="?attr/selector_list_item_categories_arrow"
        android:drawablePadding="15dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="?attr/selector_list_item_categories_textview"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textIsSelectable="false"
        android:textSize="18sp" />
    </com.andexert.library.RippleView>

</LinearLayout>
